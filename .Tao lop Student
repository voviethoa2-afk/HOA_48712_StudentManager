#include <iostream>
#include <string>
using namespace std;

class Student {
private:
    string name;
    int age;
    float gpa;

public:
    // Constructor
    Student(string n, int a, float g)
    {
        name = n;
        age = a;
        gpa = g;
    }

    // Getter
    string getName() { return name; }
    int getAge() { return age; }
    float getGPA() { return gpa; }

    // Setter
    void setName(string n) { name = n; }
    void setAge(int a) { age = a; }
    void setGPA(float g) { gpa = g; }

    // Function to show info
    void display()
    {
        cout << "Name: " << name
             << "\nAge: " << age
             << "\nGPA: " << gpa << endl;
    }
};

int main()
{
    Student s("Hoa", 20, 3.5);
    s.display();
    return 0;
}
